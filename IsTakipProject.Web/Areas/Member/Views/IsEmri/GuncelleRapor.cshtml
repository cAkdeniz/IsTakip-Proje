@model RaporUpdateViewModel
@{
    ViewData["Title"] = "DuzenleRapor";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<div class="card text-white bg-primary mt-3">
    <div class="card-header"><h4>@Model.Gorev.Ad</h4></div>
    <div class="card-body">
        <h5 class="card-title"><span>Aciliyet Durumu: </span>@Model.Gorev.Aciliyet.Tanim</h5>
        <p class="card-text">@Model.Gorev.Aciklama</p>
    </div>
</div>

<form method="post" asp-action="GuncelleRapor" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label>Tanım: </label>
        <span asp-validation-for="@Model.Tanim" class="text-danger"></span>
        <input asp-for="@Model.Tanim" class="form-control" />
    </div>
    <div class="form-group">
        <label>Detay: </label>
        <span asp-validation-for="@Model.Detay" class="text-danger"></span>
        <textarea asp-for="@Model.Detay" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <a asp-action="Index" class="btn btn-warning">Vazgeç</a>
        <button type="submit" class="btn btn-info">Kaydet</button>
    </div>
</form>

@section JavaScript
{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}



