@model List<BildirimListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="text-center text-danger font-weight-bold col-md-12">
        <h1>Bildirimler</h1>
    </div>
</div>
@if (Model.Count > 0)
{
    @foreach (var bildirim in Model)
    {
        <div class="alert alert-info p-2 my-2">


            <form asp-action="Index" method="post" asp-route-id="@bildirim.Id">
                <p class="lead">

                    @bildirim.Aciklama
                    <button type="submit" class="btn btn-sm btn-primary float-right">Okundu</button>
                </p>
            </form>
        </div>
    }
}
else
{
    <p class="lead">
        <h4 class="text-center p-4">Okunmamış bildiriminiz bulunmamaktadır.</h4>
    </p>
}



