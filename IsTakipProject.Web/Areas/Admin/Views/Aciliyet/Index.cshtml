@model List<IsTakipProject.Entities.DTOs.AciliyetDtos.AciliyetListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@if (Model.Count > 0)
{
    <a asp-action="EkleAciliyet" asp-controller="Aciliyet" class="btn btn-sm btn-info my-2">Yeni Aciliyet Ekle</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Tanim</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Tanim</td>
                    <td>
                        <a asp-action="GuncelleAciliyet" asp-controller="Aciliyet" asp-route-id="@item.Id" 
                           class="btn btn-sm btn-warning">Düzenle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
<div class="text-center lead mt-4">
    <p>
        Sistemde kayıtlı aciliyet bulunamadı.
    </p>
    <a asp-action="EkleAciliyet" asp-controller="Aciliyet" class ="btn btn-sm btn-info my-2">Yeni Aciliyet Ekle</a>
</div>
}


