@model AppUserListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form asp-action="Index" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label>Name :</label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input type="text" asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Surname :</label>
        <span asp-validation-for="@Model.Surname" class="text-danger"></span>
        <input type="text" asp-for="@Model.Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email :</label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
        <input type="text" asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone Number :</label>
        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        <input type="text" asp-for="@Model.PhoneNumber" class="form-control" />
    </div>
    <button type="submit" class="btn btn-info text-center">Kaydet</button>
</form>

