@model AppUserSignInViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

    <form asp-action="GirisYap" method="post" class="mx-auto w-50 mt-5 p-4 shadow">
        <h1 class="text-center">Giriş Yap</h1>
        <div class="form-group">
            <label>UserName :</label>
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            <input type="text" asp-for="@Model.UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Password :</label>
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
            <input type="password" asp-for="@Model.Password" class="form-control" />
        </div>
        <div class="form-check mb-3">
            <input type="checkbox" asp-for="@Model.RememberMe" class="form-check-input" />
            <label asp-for="@Model.RememberMe" class="form-check-label">Beni Hatırla</label>
        </div>
        <input type="submit" class="btn btn-info btn-primary mr-2" value="Giriş Yap" />
        <label>Hesabınız yok mu ?</label><a asp-action="KayitOl" class="btn btn-link">Kayıt Ol</a>
        <div asp-validation-summary="ModelOnly" class="mt-3 text-danger"></div>
    </form>

