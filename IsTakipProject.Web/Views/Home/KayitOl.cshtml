@model AppUserAddViewModel
@{
    ViewData["Title"] = "KayitOl";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

    <form asp-action="KayitOl" method="post" class="w-75 mt-5 mx-auto p-3 shadow">
        <h4 class="text-center">Kayıt Ol</h4>
        <div class="form-group">
            <label>UserName :</label>
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            <input type="text" asp-for="@Model.UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Password :</label>
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
            <input type="password" asp-for="@Model.Password" class="form-control" />
        </div>
        <div class="form-group">
            <label>Password :</label>
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
        </div>
        <div class="form-group">
            <label>Email :</label>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
            <input type="text" asp-for="@Model.Email" class="form-control" />
        </div>
        <div class="form-group">
            <label>Name :</label>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
            <input type="text" asp-for="@Model.Name" class="form-control" />
        </div>
        <div class="form-group">
            <label>Surname :</label>
            <span asp-validation-for="@Model.Surname" class="text-danger"></span>
            <input type="text" asp-for="@Model.Surname" class="form-control" />
        </div>
        <a asp-action="Index" class="btn btn-warning">Vazgeç</a>
        <button type="submit" class="btn btn-info">Kayıt Ol</button>
    </form>

